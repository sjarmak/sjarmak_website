---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import { Card, CardHeader, CardTitle, CardDescription, CardContent } from '../../components/ui/card';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

const title = "Blog — Stephanie Jarmak";
const description = "Writing on information science and digital library projects";
---

<BaseLayout title={title} description={description}>
  <div class="container mx-auto px-4 py-8 max-w-4xl">
    <div class="mb-12">
      <h1 class="text-4xl font-bold mb-4 text-foreground">Blog</h1>
      <p class="text-xl text-muted-foreground">
        Writing about information science and digital library projects.
      </p>
    </div>

    <section class="mb-12 space-y-6">
      {posts.map((post) => (
        <Card>
          <CardHeader>
            <CardTitle>
              <a href={`/blog/${post.slug}`} class="hover:text-primary transition-colors">
                {post.data.title}
              </a>
            </CardTitle>
            <CardDescription>
              Posted by {post.data.author} on <FormattedDate date={new Date(post.data.date)} />
            </CardDescription>
          </CardHeader>
          <CardContent>
            {post.data.description && (
              <p class="text-muted-foreground mb-4">{post.data.description}</p>
            )}
            <a href={`/blog/${post.slug}`} class="text-primary hover:underline font-medium">
              Read More →
            </a>
          </CardContent>
        </Card>
      ))}
    </section>
  </div>
</BaseLayout>
