---
import BaseLayout from '../layouts/BaseLayout.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { Card, CardHeader, CardTitle, CardDescription, CardContent } from '../components/ui/card';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 3);

const title = "Stephanie Jarmak";
const description = "Personal website and blog about information science and digital library projects";
---

<BaseLayout title={title} description={description}>
	<div class="container mx-auto px-4 py-8 max-w-4xl">
		<div class="mb-12">
			<h1 class="text-4xl font-bold mb-4 text-foreground">Stephanie Jarmak</h1>
			<p class="text-xl text-muted-foreground">
				Planetary and information scientist writing about digital library projects and AI applications.
			</p>
		</div>

		<Card class="mb-12">
			<CardHeader>
				<CardTitle>About Me</CardTitle>
			</CardHeader>
			<CardContent>
				<p class="text-muted-foreground">
					Hi! I'm Stephanie Jarmak, a planetary and information scientist working on projects to help the NASA-funded Science Explorer. I'll be sharing regular updates about my experience learning and applying recent advances in AI and search relevance to various projects that support the ADS/SciX team.
				</p>
			</CardContent>
		</Card>

		<section class="mb-12">
			<div class="flex items-center justify-between mb-6">
				<h2 class="text-2xl font-bold text-foreground">Recent Posts</h2>
				<a href="/blog" class="text-primary hover:underline font-medium">View all →</a>
			</div>
			<div class="space-y-6">
				{posts.map((post) => (
					<Card>
						<CardHeader>
							<CardTitle>
								<a href={`/blog/${post.slug}`} class="hover:text-primary transition-colors">
									{post.data.title}
								</a>
							</CardTitle>
							<CardDescription>
								Posted by {post.data.author} on <FormattedDate date={new Date(post.data.date)} />
							</CardDescription>
						</CardHeader>
						<CardContent>
							{post.data.description && (
								<p class="text-muted-foreground mb-4">{post.data.description}</p>
							)}
							<a href={`/blog/${post.slug}`} class="text-primary hover:underline font-medium">
								Read More →
							</a>
						</CardContent>
					</Card>
				))}
			</div>
		</section>
	</div>
</BaseLayout>
