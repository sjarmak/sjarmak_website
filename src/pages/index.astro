---
import BaseLayout from '../layouts/BaseLayout.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { siteConfig } from '../consts';

const posts = [
	{
	 id: 11,
	 title: 'List of LPI Abstracts with Broken Links',
	 excerpt: 'I have added a new project (https://brokenlinks.sjarmak.ai) that lists LPI abstracts with broken links along with some searchable metadata to better inform users whether their content has been removed from LPI\'s websites.',
	 date: '2025-05-02',
	 author: 'sjarmak'
	}
];

const title = "Stephanie Jarmak's Projects";
const description = "Personal website and blog about information science and digital library projects";
---

<BaseLayout title={title} description={description}>
	<div class="container mx-auto px-4 py-8">
		<h1 class="text-4xl font-bold mb-6">Stephanie Jarmak's Projects</h1>
		<p class="text-xl text-gray-600 mb-8">
			I use this page to write about some of my information science and digital library projects.
		</p>



		<section class="mb-12">
			{posts.map((post) => (
				<article class="border-b pb-8 mb-8">
					<h2 class="text-2xl font-bold mb-2">
						<a href={`/post/${post.id}`} class="text-blue-600 hover:underline">
							{post.title}
						</a>
					</h2>
					<p class="text-gray-600 text-sm mb-3">
						Posted by {post.author} on <FormattedDate date={new Date(post.date)} />
					</p>
					<p class="text-gray-700 mb-4">{post.excerpt}</p>
					<a href={`/post/${post.id}`} class="text-blue-600 hover:underline">[Read More]</a>
				</article>
			))}
		</section>

		<section class="bg-gray-100 p-6 rounded">
			<h3 class="text-xl font-bold mb-4">About Me</h3>
			<p>Hi! I'm Stephanie Jarmak, a planetary and information scientist working on projects to help the NASA-funded Science Explorer. I'll be sharing regular updates about my experience learning and applying recent advances in AI and search relevance to various projects that support the ADS/SciX team.</p>
		</section>
	</div>
</BaseLayout>
